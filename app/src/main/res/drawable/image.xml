<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C" /> <!-- xanh lá đậm khi nhấn -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Trạng thái disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7" /> <!-- xanh lá nhạt khi disabled -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- màu xanh lá mặc định -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
